<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/main_content_view"
		android:baselineAligned="false"
		tools:context=".ui.main.HomeActivity">
	<LinearLayout
			android:id="@+id/main_keyboard_group"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:orientation="vertical">
		<fragment
				android:id="@+id/fragment_keyboard"
				android:name="chankyin.mentamatics.ui.main.KeyboardFragment"
				android:tag="KeyboardFragment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:layout="@layout/frag_keyboard"/>
		<Button
				android:id="@+id/keyboard_land_gravity_left"
				android:text="@string/btn_keyboard_gravity_left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:onClick="landSwitchKeyboardPositionLeft"
				android:visibility="visible"/>
		<Button
				android:id="@+id/keyboard_land_gravity_right"
				android:text="@string/btn_keyboard_gravity_right"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:onClick="landSwitchKeyboardPositionRight"
				android:visibility="gone"/>
	</LinearLayout>

	<RelativeLayout
			android:id="@+id/main_main_group"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_toLeftOf="@id/main_keyboard_group"
			android:layout_toStartOf="@id/main_keyboard_group">
		<fragment
				android:id="@+id/fragment_problem"
				android:name="chankyin.mentamatics.ui.main.ProblemFragment"
				android:tag="ProblemFragment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				tools:layout="@layout/frag_problem"/>
		<fragment
				android:id="@+id/fragment_stats"
				android:name="chankyin.mentamatics.ui.main.StatsFragment"
				android:tag="StatsFragment"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_alignParentBottom="true"
				tools:layout="@layout/frag_stats"/>
	</RelativeLayout>
</RelativeLayout>
