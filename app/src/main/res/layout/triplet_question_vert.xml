<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<GridLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:rowCount="2"
			android:columnCount="2">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/triplet_operand_a"
				android:layout_row="0"
				android:layout_column="1"
				style="@style/VerticalOperand"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/triplet_operator"
				android:layout_row="1"
				android:layout_column="0"
				android:paddingRight="@dimen/question_operator_vert_right_pad" tools:ignore="RtlHardcoded,RtlSymmetry"
				style="@style/VerticalOperator"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/triplet_operand_b"
				android:layout_row="1"
				android:layout_column="1"
				style="@style/VerticalOperand"/>
	</GridLayout>
</RelativeLayout>