<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	<style name="NumberButtons" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:background">@color/colorNumberButtons</item>
		<item name="android:textColor">@color/colorNumberButton</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">fill</item>
		<item name="android:layout_width">@dimen/buttonWidth</item>
	</style>
	<style name="QuestionExpression">
		<item name="android:fontFamily">monospace</item>
		<item name="android:textSize">@dimen/question_text_size</item>
	</style>
	<style name="VerticalOperand" parent="QuestionExpression">
	</style>
	<style name="VerticalOperator" parent="QuestionExpression">
	</style>
	<style name="StatsTable">
		<item name="android:paddingTop">@dimen/stats_padding_vert</item>
		<item name="android:paddingBottom">@dimen/stats_padding_vert</item>
		<item name="android:paddingLeft">@dimen/stats_padding_horiz</item>
		<item name="android:paddingRight">@dimen/stats_padding_horiz</item>
	</style>
</resources>
